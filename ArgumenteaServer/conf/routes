# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Users
GET 	/users 						controllers.Application.userAccounts()
POST 	/users 						controllers.Application.newUserAccount()
POST    /users/:id/delete       	controllers.Application.deleteUserAccount(id: String)
GET		/user/:nickname				controllers.Application.seeUserAccount(nickname: String)

#Article
GET		/articles					controllers.Application.articles()
POST 	/articles 					controllers.Application.newArticle()
POST    /articles/:id/delete       	controllers.Application.deleteArticle(id: String)
GET		/article/:id				controllers.Application.article(id: String)

#Annotation
GET		/annotations				controllers.Application.annotations()
POST	/annotations				controllers.Application.newAnnotation()
POST	/annotations/:id/delete		controllers.Application.deleteAnnotation(id: String)
GET		/annotation/:id				controllers.Application.annotation(id: String)
GET		/annotations/:id			controllers.Application.getAnnotationsOnArticle(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
